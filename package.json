{
  "name": "nodejs-expresjs-typescript-starter",
  "version": "0.0.1",
  "description": "A nodejs starter template with expressjs and typescript",
  "main": "server.ts",
  "scripts": {
    "build": "npm run clear && tsc",
    "dev": "nodemon server.ts",
    "start": "npm run build && node dist/server.js",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "format-check": "npx prettier --check src/*",
    "format": "npx prettier --write src/*",
    "clear": "del-cli --force dist"
  },
  "keywords": [
    "Nodejs",
    "Expressjs",
    "Typescript",
    "MongoDB"
  ],
  "author": "Anastasios Theodosiou",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^27.0.3",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "del-cli": "^4.0.1",
    "dotenv": "^10.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.4.4",
    "nodemon": "^2.0.15",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.1",
    "typescript": "^4.5.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-rate-limit": "^5.5.1",
    "helmet": "^4.6.0",
    "morgan": "^1.10.0",
    "ts-node": "^10.4.0",
    "winston": "^3.3.3"
  }
}
