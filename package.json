{
  "name": "nodejs-expresjs-typescript-starter",
  "version": "0.0.1",
  "description": "A nodejs starter template with expressjs and typescript",
  "main": "src/index.ts",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "format-check":"npx prettier --check src/*",
    "format":"npx prettier --write src/*"
  },
  "keywords": [
    "Nodejs",
    "Expressjs",
    "Typescript"
  ],
  "author": "Anastasios Theodosiou",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "nodemon": "^2.0.15",
    "prettier": "2.5.1",
    "typescript": "^4.5.3"
  },
  "dependencies": {
    "express": "^4.17.1",
    "ts-node": "^10.4.0"
  }
}
